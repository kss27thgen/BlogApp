<div class="container">
  <%= bootstrap_form_for @blog do |f|%>
      <%= f.text_field :title, placeholder:"タイトルを入力" %>
    <p>本文<span class="mark-down">(マークダウン記法でも書けます)</span></p>
      <%= f.text_area :text, placeholder:"本文を入力", :cols => 40, :rows => 20 %>
    <p>送信</p>
      <%= f.submit %>
  <% end %>
</div>

